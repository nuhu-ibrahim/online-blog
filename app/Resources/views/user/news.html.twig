{% extends 'user.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ page_header }}
            </h1>
        </div>
    </div>
            
    <div class="row"> 
        {% if news %}
            {% for new in news %}
                <div class="col-lg-10">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            {{new.getNewsTitle}}
                        </div>
                        <div class="panel-body">
                            <p>{{new.getNewsContent}}</p>
                            <hr>
                            Posted on {{new.getNewsDate.format("M d, Y \\a\\t H : i A")}} 
                        </div>
                        <div class="panel-footer">
                            Author: {{new.getNewsAuthor}}
                        </div>
                    </div>
                </div>
                <hr>
            {% endfor %}
        {% else %}
            <div class="col-lg-8">
                <h2>No news yet!.</h2>
            </div>
        {% endif %}
    </div> 
{% endblock %}
